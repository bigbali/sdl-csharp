<Window x:Class="sdl.SDLWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sdl"
        mc:Ignorable="d"
        Title="Simple YouTube Downloader" 
        Width="Auto" 
        Height="Auto" 
        SizeToContent="WidthAndHeight" 
        Foreground="#FFE8E8E8" 
        Background="#FF7C0606" d:DesignWidth="1200">
    <!--Window.Resources>
        <UR x:Key="URLEntries"/>
    </Window.Resources-->
    <Grid x:Name="MasterGrid" Background="#FF030812" MinWidth="400" MinHeight="400" UseLayoutRounding="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="URLGroup"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top"
              Grid.Column="0">
            <Border BorderBrush="Black" BorderThickness="1" Background="#3FD02727" CornerRadius="8,8,8,8" Margin="10,10,10,149">
                <Grid>
                    <Label x:Name="URLLabel"
                           Width="Auto"
                           Foreground="White"
                           Panel.ZIndex="103"
                           BorderBrush="Black"
                           Content="Select URLs"
                           Margin="10,8,10,410"
                           VerticalContentAlignment="Center"
                           Padding="0,0,5,0" />
                    <TextBox x:Name="URLInput"
                             Margin="10,30,95,385"
                             Text="Select URL"
                             TextWrapping="Wrap"
                             Panel.ZIndex="99"
                             HorizontalContentAlignment="Left"
                             GotFocus="clearURLInputPlaceholder"
                             LostFocus="addURLInputPlaceholder" />
                    <Button x:Name="ButtonAddURL"
                            Content="Add URL"
                            Click="addURL"
                            HorizontalAlignment="Right"
                            Margin="0,30,10,0"
                            VerticalAlignment="Top"
                            Width="80"
                            Panel.ZIndex="99"/>
                    <Label
                        Content="Queue"
                        Margin="10,60,0,0"
                        Foreground="White"
                        Panel.ZIndex="104"
                        Padding="0,0,5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"/>
                    <ListBox x:Name="URLList"
                             d:ItemsSource="{d:SampleData ItemCount=3 }"
                             Margin="10,81,95,10"
                             Panel.ZIndex="100"
                             Background="#4CC1AE2F"
                             HorizontalContentAlignment="Stretch"
                             VerticalContentAlignment="Top" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="Auto" Background="#FFDE0E0E">
                                    <TextBox Text="{Binding Path=entry}" DockPanel.Dock="Left" Width="Auto" Margin="0,0,79,0" />
                                    <Button Content="Remove" DockPanel.Dock="Right" Width="74" HorizontalAlignment="Right" Click="removeEntry"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!-- ItemsSource="{Binding Source={StaticResource URLEntries}}" DisplayMemberPath="visualEntry" -->
                </Grid>
            </Border>
            <!--Button      x:Name="DownloadSingleButton"   Content="Download Single"   Click="DownloadSingle" Margin="108,251,107,0" VerticalAlignment="Top"/-->
            <!--Button      x:Name="DownloadPlaylistButton" Content="Download Playlist" Click="DownloadPlaylist" HorizontalAlignment="Left" Margin="108,217,0,0" VerticalAlignment="Top" Width="184" BorderThickness="0,0,0,0"/-->
            <!--CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="71,181,0,0" VerticalAlignment="Top"/-->
        </Grid>
        <Grid  Grid.Column="1" x:Name="FolderGroup" Height="Auto">
            <Border BorderBrush="Black" BorderThickness="1" Background="#3FD02727" CornerRadius="8,8,8,8" Margin="10,10,10,149">
                <Grid>
                    <Label x:Name="FolderLabel"
                           Content="Select folder"
                           Width="Auto"
                           Foreground="White"
                           Panel.ZIndex="103"
                           BorderBrush="Black"
                           Margin="10,8,10,410"
                           VerticalContentAlignment="Center"
                           Padding="0,0,5,0" />
                    <TextBox x:Name="FolderPathInput"
                             HorizontalAlignment="Left"
                             Margin="10,32,0,0"
                             Text="No folder selected"
                             TextWrapping="Wrap"
                             VerticalAlignment="Top"
                             Width="276"
                             Height="19"/>
                    <Button x:Name="SelectedFolderInbput"
                            Content="Select Folder"
                            Click="selectFolder"
                            HorizontalAlignment="Left"
                            Margin="10,56,0,0"
                            VerticalAlignment="Top"
                            Width="99"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
