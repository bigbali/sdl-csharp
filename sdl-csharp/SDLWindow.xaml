<Window x:Class="sdl.SDLWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sdl"
        xmlns:control="clr-namespace:sdl_csharp.Resource.Control"
        mc:Ignorable="d"
        d:DesignWidth="1600"
        Title="Simple YouTube Downloader" 
        Width="Auto" 
        Height="Auto" 
        SizeToContent="WidthAndHeight" 
        FontSize="16"
        DataContext="{Binding RelativeSource={RelativeSource Self}, Path=WindowSettings}"
        FontFamily="Raleway" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resource/Style/Button.xaml" />
                <ResourceDictionary Source="Resource/Style/Label.xaml" />
                <ResourceDictionary Source="Resource/Style/TextBox.xaml" />
                <ResourceDictionary Source="Resource/Style/URLQueueEntry.xaml" />
                <ResourceDictionary Source="Resource/Style/General.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ListBox">
                <Setter Property="Padding" Value="5, 7, 5, 7" />
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Style.Resources>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="MasterGrid"
          Background="{StaticResource Color.Window.Background}"
          MinWidth="1400"
          MinHeight="960"
          UseLayoutRounding="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="URLGroup"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Grid.Column="0">
            <!-- Background="#3F46484A" -->
            <Border BorderBrush="{StaticResource Color.Border}"
                    BorderThickness="1"
                    Background="{StaticResource Color.Border.Background}"
                    CornerRadius="6"
                    Margin="10,10,5,10">
                <Grid VerticalAlignment="Stretch"
                      Margin="0,0,0,15">
                    <Label x:Name="URLLabel"
                           Foreground="{StaticResource Color.Text}"
                           Content="URL"
                           Margin="0,0,0,0"
                           Padding="15,10,15,5" 
                           VerticalContentAlignment="Center"
                           VerticalAlignment="Top" />
                    <control:TextInput x:Name="URLInput"
                             Placeholder="Select URL"
                             TextWrapping="Wrap"
                             Height="30"
                             HorizontalContentAlignment="Left"
                             VerticalContentAlignment="Center"
                             VerticalAlignment="Top"
                             Margin="15,34,120,0" />
                    <Button x:Name="ButtonAddURL"
                            Content="Add URL"
                            Click="AddURL"
                            HorizontalAlignment="Right"
                            Margin="0,34,15,0"
                            VerticalAlignment="Top"
                            Width="100" />
                    <Label
                        Content="Queue"
                        Margin="0,74.2,0,0"
                        Foreground="White"
                        Panel.ZIndex="104"
                        Padding="15,10,15,5" 
                        VerticalAlignment="Top" />
                    <!-- Separate into own component -->
                    <ListBox x:Name="URLList"
                             Margin="15,108,15,0"
                             Background="{StaticResource Color.URLQueue.Background}"
                             VerticalAlignment="Stretch"
                             HorizontalContentAlignment="Stretch"
                             VerticalContentAlignment="Top"
                             BorderThickness="1"
                             BorderBrush="{StaticResource Color.URLQueue.Border}" 
                             Padding="0"
                             ItemsSource="{Binding URLEntries}"
                             d:ItemsSource="{d:SampleData ItemCount=3 }">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="100">
                                    <Grid Height="33" VerticalAlignment="Top">
                                        <TextBox Text="{Binding Path=Entry}"
                                                 Width="Auto"
                                                 Margin="0,0,256,0"
                                                 FontFamily="Consolas"
                                                 IsReadOnly="True"
                                                 VerticalContentAlignment="Center">
                                            <TextBox.Style>
                                                <Style BasedOn="{StaticResource ResourceKey={x:Type TextBox}}" TargetType="{x:Type TextBox}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                                <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="3, 0, 0, 0" Background="{TemplateBinding Background}" SnapsToDevicePixels="True" CornerRadius="6, 6, 6, 6">
                                                                    <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                            <Setter Property="BorderBrush" Value="#FFFFC700" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                            <Setter Property="BorderBrush" Value="#FF83C735" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                        <Button Width="150" HorizontalAlignment="Right" Click="InitIndividualDownload" Margin="0,2,101,1" Padding="0">
                                            <!-- Individual download button -->
                                            <Grid Width="140">
                                                <Label Content="{Binding Path=Label, FallbackValue='Download'}" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalContentAlignment="Bottom" Width="115" Padding="8, 0, 0, 0" Foreground="White"/>
                                                <Ellipse HorizontalAlignment="Right" Width="20" Height="20">
                                                    <Ellipse.Clip>
                                                        <CombinedGeometry GeometryCombineMode="Exclude">
                                                            <CombinedGeometry.Geometry1>
                                                                <CombinedGeometry GeometryCombineMode="Exclude">
                                                                    <CombinedGeometry.Geometry1>
                                                                        <RectangleGeometry Rect="-1000,-1000,2000,2000"/>
                                                                    </CombinedGeometry.Geometry1>
                                                                    <CombinedGeometry.Geometry2>
                                                                        <EllipseGeometry  Center="10, 10" RadiusX="7" RadiusY="7"/>
                                                                    </CombinedGeometry.Geometry2>
                                                                </CombinedGeometry>
                                                            </CombinedGeometry.Geometry1>
                                                            <CombinedGeometry.Geometry2>
                                                                <PathGeometry>
                                                                    <PathGeometry.Figures>
                                                                        <PathFigureCollection>
                                                                            <PathFigure IsClosed="True" StartPoint="10,10">
                                                                                <PathFigure.Segments>
                                                                                    <PathSegmentCollection>
                                                                                        <LineSegment Point="-1, 18" />
                                                                                        <LineSegment Point="-1, 2" />
                                                                                    </PathSegmentCollection>
                                                                                </PathFigure.Segments>
                                                                            </PathFigure>
                                                                        </PathFigureCollection>
                                                                    </PathGeometry.Figures>
                                                                </PathGeometry>
                                                            </CombinedGeometry.Geometry2>
                                                        </CombinedGeometry>
                                                    </Ellipse.Clip>
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="White" />
                                                            <Setter Property="Opacity" Value="0" />
                                                            <Setter Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <RotateTransform CenterX="10" CenterY="10" Angle="0"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                                    <DataTrigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" AutoReverse="False" />
                                                                                <DoubleAnimation Storyboard.TargetProperty="(TextBox.RenderTransform).(RotateTransform.Angle)" From="0" To="360" Duration="0:0:3" AutoReverse="False" RepeatBehavior="Forever" FillBehavior="Stop"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </DataTrigger.EnterActions>
                                                                    <DataTrigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2" AutoReverse="False" />
                                                                                <DoubleAnimation Storyboard.TargetProperty="(TextBox.RenderTransform).(RotateTransform.Angle)" From="0" To="360" Duration="0:0:3" AutoReverse="False" RepeatBehavior="Forever" />
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </DataTrigger.ExitActions>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                            </Grid>
                                        </Button>
                                        <Button Content="Remove"
                                                Width="96"
                                                HorizontalAlignment="Right"
                                                Click="RemoveEntry"
                                                Padding="5,3,5,3"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
        <Grid x:Name="FolderGroup"
              Grid.Column="1"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Border BorderBrush="{StaticResource Color.Border}"
                    BorderThickness="1"
                    Background="{StaticResource Color.Border.Background}"
                    CornerRadius="6"
                    Margin="5,10,10,10">
                <Grid>
                    <Label x:Name="FolderLabel"
                           Content="Folder"
                           Panel.ZIndex="103"
                           Padding="15,10,15,5"
                           VerticalContentAlignment="Center"
                           VerticalAlignment="Top"/>
                    <control:TextInput x:Name="FolderPathInput"
                             Margin="15,34,140,0"
                             TextWrapping="Wrap"
                             VerticalAlignment="Top"
                             VerticalContentAlignment="Center"
                             Placeholder="Select folder"
                             Text="{Binding FolderPath}" />
                    <Button x:Name="SelectedFolderInbput"
                            Content="Select Folder"
                            Click="SelectFolder"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,34,15,0"
                            Width="120" />
                    <control:TextInput x:Name="SubFolderPathInput"
                                       Height="30"
                                       Width="500"
                                       Margin="15,70,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       VerticalContentAlignment="Center"
                                       Text="{Binding SubFolderPath}"
                                       Placeholder="Select subfolder"/>
                    <control:ToggleButton Content="Put contents in subfolder"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          Width="250"
                                          Margin="15,110,0,0"
                                          Click="ToggleUseSubFolderPath"
                                          State="{Binding UseSubFolderPath}"/>
                    <control:ToggleButton Content="Infer subpath from playlist title"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          Width="290"
                                          Margin="275,110,0,0"
                                          Click="ToggleInferSubFolderPath"
                                          State="{Binding InferSubFolderPath}"/>
                    <control:SwitchButton Content1="Playlist"
                                          Content2="Single"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          Margin="15,144,0,0"
                                          Click="TogglePlaylist"
                                          State="{Binding IsPlaylist}"/>
                    <control:SwitchButton Content1="Audio"
                                          Content2="Video"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          Margin="185,144,0,0"
                                          Click="ToggleAudio"
                                          State="{Binding IsAudio}"/>
                    <control:ToggleButton Content="Remove entries when downloaded"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          Width="320"
                                          Margin="15,233,0,0"
                                          Click="ToggleRemoveEntries"
                                          State="{Binding RemoveEntries}"/>
                    <Button Content="Download all"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="15,272,0,0"
                            Width="180"
                            Height="40"
                            FontSize="18"
                            Click="InitDownload">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
