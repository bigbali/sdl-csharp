<Window
    x:Class="sdl_csharp.SDLWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:sdl_csharp.Resource.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entry="clr-namespace:sdl_csharp.Model.Entry"
    xmlns:entrycontrol="clr-namespace:sdl_csharp.Resource.Control.Entry"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:sdl_csharp.ViewModel"
    xmlns:view="clr-namespace:sdl_csharp.View"
    Width="Auto"
    Height="Auto"
    MinWidth="1080"
    MinHeight="800"
    mc:Ignorable="d"
    d:DesignWidth="1600"
    SizeToContent="WidthAndHeight"
    Title="Simple YouTube Downloader"
    UseLayoutRounding="True">
    <Grid
        x:Name="MasterGrid"
        MinWidth="1400"
        MinHeight="960"
        HorizontalAlignment="Stretch"
        Background="{StaticResource Color.Window.Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="600" />
        </Grid.ColumnDefinitions>
        <view:EntriesView Grid.Column="0" />
        <view:ActionsView Grid.Column="1" />
    </Grid>
</Window>