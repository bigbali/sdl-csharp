<UserControl
    x:Class="sdl_csharp.Resource.Control.Entry.EntryControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:sdl_csharp.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entry="clr-namespace:sdl_csharp.Model.Entry"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:sdl_csharp.ViewModel"
    Height="35"
    Margin="0,0,0,-6"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodel:EntryViewModel}"
    d:DesignHeight="35"
    d:DesignWidth="800">
    <UserControl.Resources>
        <converter:PlaylistProgressConverter x:Key="playlistProgressConverter" />
    </UserControl.Resources>
    <Grid Height="35">
        <Grid Height="33" VerticalAlignment="Top">
            <Border
                Width="Auto"
                Height="30"
                MinWidth="350"
                Margin="0,0,256,0"
                VerticalAlignment="Center"
                Panel.ZIndex="100"
                BorderBrush="{StaticResource Color.Border}"
                BorderThickness="0, 1, 1, 1"
                CornerRadius="0, 6, 6, 0" />
            <TextBox
                x:Name="textbox"
                Width="Auto"
                Margin="0,0,256,0"
                VerticalContentAlignment="Center"
                d:Text="https://www.youtube.com/video"
                FontFamily="Consolas"
                IsReadOnly="True"
                Text="{Binding Path=URL, Mode=OneWay}">
                <TextBox.Style>
                    <Style BasedOn="{StaticResource ResourceKey={x:Type TextBox}}" TargetType="{x:Type TextBox}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Border
                                        x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="3, 0, 0, 0"
                                        CornerRadius="0, 6, 6, 0"
                                        SnapsToDevicePixels="True">
                                        <Grid x:Name="grid">
                                            <Grid.OpacityMask>
                                                <VisualBrush>
                                                    <VisualBrush.Visual>
                                                        <Border
                                                            Width="{Binding ActualWidth, ElementName=grid}"
                                                            Height="{Binding ActualHeight, ElementName=grid}"
                                                            Background="Black"
                                                            CornerRadius="0, 8, 8, 0" />
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Grid.OpacityMask>
                                            <ProgressBar
                                                HorizontalAlignment="Stretch"
                                                Value="{Binding DownloadPercent, TargetNullValue='0'}"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                d:Value="100"
                                                Foreground="{StaticResource Color.ProgressBar.Fill}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <ScrollViewer
                                                    x:Name="PART_ContentHost"
                                                    Focusable="false"
                                                    Grid.Column="0"
                                                    HorizontalScrollBarVisibility="Hidden"
                                                    VerticalScrollBarVisibility="Hidden" />
                                                <Label
                                                    FontFamily="{StaticResource CourierPrime}"
                                                    Grid.Column="1"
                                                    Margin="4, 0, 4, 0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Content="{Binding Data.PlaylistDownloadIndex, TargetNullValue={x:Null}, Converter={StaticResource playlistProgressConverter}, ConverterParameter={x:Reference textbox}}"
                                                    d:Content="13/13">
                                                    <!--<Label.Style>
                                                        <Style.Triggers>
                                                            <DataTrigger />
                                                        </Style.Triggers>
                                                    </Label.Style>-->
                                                </Label>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Value="True" Binding="{Binding StatusViewModel.IsDownloading}">
                                <Setter Property="BorderBrush" Value="{StaticResource Color.ProgressBar.Fill}" />
                            </DataTrigger>
                            <DataTrigger Value="True" Binding="{Binding StatusViewModel.IsConverting}">
                                <Setter Property="BorderBrush" Value="#FF187AC7" />
                            </DataTrigger>
                            <DataTrigger Value="True" Binding="{Binding StatusViewModel.IsDone}">
                                <Setter Property="BorderBrush" Value="#FF83C735" />
                            </DataTrigger>
                            <DataTrigger Value="True" Binding="{Binding StatusViewModel.IsError}">
                                <Setter Property="BorderBrush" Value="#FFC74935" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <Button
                Width="150"
                Margin="0,2,101,1"
                HorizontalAlignment="Right"
                Click="DownloadEntry"
                Padding="0">
                <!-- Individual download button -->
                <Grid Width="140">
                    <Label
                        Width="115"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Bottom"
                        Content="{Binding StatusViewModel.Label}"
                        d:Content="Download"
                        Foreground="{StaticResource Color.Text}"
                        Padding="8, 0, 0, 0" />
                    <Ellipse
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Right">
                        <Ellipse.Clip>
                            <CombinedGeometry GeometryCombineMode="Exclude">
                                <CombinedGeometry.Geometry1>
                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="-1000,-1000,2000,2000" />
                                        </CombinedGeometry.Geometry1>
                                        <CombinedGeometry.Geometry2>
                                            <EllipseGeometry
                                                Center="10, 10"
                                                RadiusX="7"
                                                RadiusY="7" />
                                        </CombinedGeometry.Geometry2>
                                    </CombinedGeometry>
                                </CombinedGeometry.Geometry1>
                                <CombinedGeometry.Geometry2>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigureCollection>
                                                <PathFigure StartPoint="10,10" IsClosed="True">
                                                    <PathFigure.Segments>
                                                        <PathSegmentCollection>
                                                            <LineSegment Point="-1, 18" />
                                                            <LineSegment Point="-1, 2" />
                                                        </PathSegmentCollection>
                                                    </PathFigure.Segments>
                                                </PathFigure>
                                            </PathFigureCollection>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </CombinedGeometry.Geometry2>
                            </CombinedGeometry>
                        </Ellipse.Clip>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="White" />
                                <Setter Property="Opacity" Value="0" />
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="0" CenterX="10" CenterY="10" />
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Value="True" Binding="{Binding StatusViewModel.IsDownloading}">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        AutoReverse="False"
                                                        Duration="0:0:0.2"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="1" />
                                                    <DoubleAnimation
                                                        AutoReverse="False"
                                                        Duration="0:0:3"
                                                        FillBehavior="Stop"
                                                        From="0"
                                                        RepeatBehavior="Forever"
                                                        Storyboard.TargetProperty="(TextBox.RenderTransform).(RotateTransform.Angle)"
                                                        To="360" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        AutoReverse="False"
                                                        Duration="0:0:0.2"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0" />
                                                    <DoubleAnimation
                                                        AutoReverse="False"
                                                        Duration="0:0:3"
                                                        From="0"
                                                        RepeatBehavior="Forever"
                                                        Storyboard.TargetProperty="(TextBox.RenderTransform).(RotateTransform.Angle)"
                                                        To="360" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                    <DataTrigger Value="True" Binding="{Binding StatusViewModel.IsConverting}">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        AutoReverse="False"
                                                        Duration="0:0:0.2"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="1" />
                                                    <DoubleAnimation
                                                        AutoReverse="False"
                                                        Duration="0:0:3"
                                                        FillBehavior="Stop"
                                                        From="0"
                                                        RepeatBehavior="Forever"
                                                        Storyboard.TargetProperty="(TextBox.RenderTransform).(RotateTransform.Angle)"
                                                        To="360" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        AutoReverse="False"
                                                        Duration="0:0:0.2"
                                                        Storyboard.TargetProperty="Opacity"
                                                        To="0" />
                                                    <DoubleAnimation
                                                        AutoReverse="False"
                                                        Duration="0:0:3"
                                                        From="0"
                                                        RepeatBehavior="Forever"
                                                        Storyboard.TargetProperty="(TextBox.RenderTransform).(RotateTransform.Angle)"
                                                        To="360" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                </Grid>
            </Button>
            <Button
                Width="96"
                HorizontalAlignment="Right"
                Click="RemoveEntry">
                <Label HorizontalAlignment="Stretch" Content="Remove" />
            </Button>
        </Grid>
    </Grid>
</UserControl>